<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    >
    
     <TextView
        android:id="@+id/txtLeaveText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_balance_heading"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtLeaveText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_balance_curr_txt" />

    <TextView
        android:id="@+id/txtLeaveBal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF3333" />

    <TextView
        android:id="@+id/txtLeaveText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_balance_days_txt" />

</LinearLayout>
    
 </LinearLayout>


