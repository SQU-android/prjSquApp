<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="om.squ.edu.app.android.MainActivity"
    tools:ignore="MergeRootFrame" >

      <LinearLayout
          android:layout_width="350dp"
          android:layout_height="30dp"
          android:orientation="horizontal" >

             <TextView
                 android:id="@+id/txtLblName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Name :" />

                 <TextView
    	        android:id="@+id/txtName"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="xxxx" />
                 
                 <TextView
                 android:id="@+id/txtSpace1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="    " />
                 
                 <TextView
                 android:id="@+id/txtLblId"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Id :" />
                 <TextView
                 android:id="@+id/txtId"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="****" />
                 
       </LinearLayout>

          <LinearLayout
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:orientation="horizontal" >

              
              <ImageButton
                  android:id="@+id/imgBttnSqu"
                  android:layout_width="57dp"
				  android:layout_height="50dp"
				  android:background="@null"
				  android:onClick="clickSqu"
                  android:src="@drawable/ic_squ_logo" />

             <ImageButton
                  android:id="@+id/imgBttnSalary"
                  android:layout_width="57dp"
				  android:layout_height="50dp"
				  android:background="@null"
				  android:onClick="clickSalary"
                  android:src="@drawable/ic_salary" />
		    <ImageButton
		        android:id="@+id/imgBttnPayment"
		        android:layout_width="57dp"
		        android:layout_height="50dp"
		        android:background="@null"
		        android:contentDescription="@string/button_Payment"
		        android:onClick="clickPayment"
		        android:src="@drawable/ic_payment" />
		   <ImageButton
		        android:id="@+id/imgBttnLeaveBal"
		        android:layout_width="57dp"
		        android:layout_height="50dp"
		        android:background="@null"
		        android:onClick="clickLeaveBal"
		        android:src="@drawable/ic_vacation" />
		</LinearLayout>
          <TextView
              android:id="@+id/txtSpace2"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:layout_gravity="bottom"
              android:text="" />

          <TextView
              android:id="@+id/txtLoadingMac"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:text="Loading .."
              android:textColor="#0000FF" />
            <TextView
              android:id="@+id/txtSpace3"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:layout_gravity="bottom"
              android:text="" />        
          
          <TextView
              android:id="@+id/txtViewBeta"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:text="Beta - Programme - (Author : Bhabesh)"
              android:textColor="#0000FF" />
          
              <TextView
		        android:id="@+id/txtViewMacAdd"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="" />
          
</LinearLayout>

